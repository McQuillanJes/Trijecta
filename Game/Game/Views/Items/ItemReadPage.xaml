<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.ItemReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>


    <Grid>
            
        <StackLayout 
            Style="{StaticResource VerticalStack}"
            HorizontalOptions="Center"
            WidthRequest="350"
            Spacing="10">
              
            <Label Text="Details Page" Style="{StaticResource HeaderStyle}"
                    FontSize="Medium"
                    HorizontalOptions="Center"/>

            <StackLayout>
                <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"
                        HorizontalOptions="Center"
                        BackgroundColor="Transparent"
                        WidthRequest="150"
                        HeightRequest="150"/>
                    
            </StackLayout>

            <StackLayout BackgroundColor="#696969">

                <StackLayout Style="{StaticResource HorizontalStack}"
                                    Padding="7,5"
                                    Spacing="5">

                    <Label 
                                    Text=" Name: " 
                                    FontSize="15"
                                    Style="{StaticResource LabelStyle}"/>

                    <Editor Text="{Binding Data.Name}" 
                                d:Text="Item Name"
                                FontSize="15"
                                WidthRequest="284"
                                AutoSize="TextChanges"
                                MaxLength="25"
                                BackgroundColor="#36454F"
                                IsReadOnly="True"/>

                </StackLayout>

                <StackLayout Style="{StaticResource HorizontalStack}"
                                    Padding="7,5"
                                    Spacing="5">

                    <Label 
                                    Text=" Description: "
                                    FontSize="15"
                                    Style="{StaticResource LabelStyle}"/>

                    <Editor Text="{Binding Data.Description}" 
                                d:Text="Item Description"
                                FontSize="15"
                                WidthRequest="247"
                                AutoSize="TextChanges"
                                MaxLength="50"
                                BackgroundColor="#36454F"
                                IsReadOnly="True"/>


                </StackLayout>

            </StackLayout>

            <StackLayout Style ="{StaticResource HorizontalStack}" 
                        BackgroundColor="#696969"
                        Padding="7,5"
                        WidthRequest="350"
                        Spacing="7">

                <StackLayout Padding="5">

                    <StackLayout BackgroundColor="#808080" 
                                    Style="{StaticResource VerticalStack}" 
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="Center" 
                                    HeightRequest="70"
                                    WidthRequest="156">

                        <Label 
                            Text="Location : " 
                            HorizontalOptions="Center"
                            HeightRequest="37"
                            Style="{StaticResource LabelStyle}"/>

                        <Label 
                            Text="{Binding Data.Location}" 
                            HorizontalOptions="Center"
                            FontAttributes="Bold"
                            Style="{StaticResource ValueStyle}"/>

                    </StackLayout>

                </StackLayout>


                <StackLayout Padding="5">

                    <StackLayout BackgroundColor="#808080" 
                                    Style="{StaticResource VerticalStack}" 
                                    HorizontalOptions="Center" 
                                    HeightRequest="70"
                                    WidthRequest="156">

                        <Label 
                        Text="Attribute : " 
                        HorizontalOptions="Center"
                        HeightRequest="37"
                        Style="{StaticResource LabelStyle}"/>

                        <Label 
                        Text="{Binding Data.Attribute}" 
                        HorizontalOptions="Center"
                        FontAttributes="Bold"
                        Style="{StaticResource ValueStyle}"/>

                    </StackLayout>

                </StackLayout>

            </StackLayout>

                <Grid HorizontalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Grid.Row="0"
                            Text="Range" 
                            Style="{StaticResource LabelStyle}"/>

                    <Label Grid.Column="1" Grid.Row="0"
                            Text="{Binding Data.Range}" 
                            x:Name="RangeValue"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            BackgroundColor="#36454F"
                            WidthRequest="35"
                            HeightRequest="35"
                            FontAttributes="Bold"
                            Style="{StaticResource ValueStyle}"/>

                    <Label Grid.Column="0" Grid.Row="1"
                            Text="Value"
                            Style="{StaticResource LabelStyle}"/>

                    <Label Grid.Column="1" Grid.Row="1"
                            Text="{Binding Data.Value}" 
                            x:Name="ValueValue"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            BackgroundColor="#36454F"
                            WidthRequest="35"
                            HeightRequest="35"
                            FontAttributes="Bold"
                            Style="{StaticResource ValueStyle}"/>

                    <Label Grid.Column="0" Grid.Row="2"
                            Text="Damage" 
                            Style="{StaticResource LabelStyle}"/>

                    <Label Grid.Column="1" Grid.Row="2"
                            Text="{Binding Data.Damage}" 
                            x:Name="DamageValue"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            BackgroundColor="#36454F"
                            WidthRequest="35"
                            HeightRequest="35"
                            FontAttributes="Bold"
                            Style="{StaticResource ValueStyle}"/>

                </Grid>

        </StackLayout>
            
    </Grid>
    
</ContentPage>