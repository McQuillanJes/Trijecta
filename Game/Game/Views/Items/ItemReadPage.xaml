<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.ItemReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>

    <StackLayout 
        Style="{StaticResource OuterBoxStack}">
              
        <Label Text="Details Page" Style="{StaticResource HeaderStyle}"/>

        <Frame Style="{StaticResource ItemPictureFrame}">
            <StackLayout>
            <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"/>

            </StackLayout>
        </Frame>

        <StackLayout Style="{StaticResource ItemLabelOuterBox}">

            <StackLayout Style="{StaticResource EntryBox}">

                <Label Text="Name: "
                    Style="{StaticResource LabelStyle}"/>

                <Frame Style="{StaticResource LabelFrame}">
                    <Label Text="{Binding Data.Name}"
                        Style="{StaticResource LabelStyle}"/>
                </Frame>


            </StackLayout>

            <StackLayout Style="{StaticResource EntryBox}">

                <Label Text="Description: "
                    Style="{StaticResource LabelStyle}"/>

                <Frame Style="{StaticResource LabelFrame}"
                       WidthRequest="220">

                    <Label Text="{Binding Data.Description}"
                        Style="{StaticResource LabelStyle}"/>

                </Frame>

            </StackLayout>

        </StackLayout>

        <StackLayout Style ="{StaticResource ItemPickerOuterBox}">

            <StackLayout Style="{StaticResource PaddedBox}">

                <StackLayout Style="{StaticResource ItemLabelBox}">

                    <Label Text="Location :" 
                        Style="{StaticResource PickerLabel}"/>

                    <Label Text="{Binding Data.Location}" 
                        Style="{StaticResource PickerValueLabel}"/>

                </StackLayout>

            </StackLayout>

            <StackLayout Style="{StaticResource PaddedBox}">

                <StackLayout Style="{StaticResource ItemLabelBox}">

                    <Label Text="Attribute :" 
                        Style="{StaticResource PickerLabel}"/>
                            

                    <Label Text="{Binding Data.Attribute}" 
                        Style="{StaticResource PickerValueLabel}"/>

                </StackLayout>

            </StackLayout>

        </StackLayout>

        <Grid HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Grid.Row="0"
                Text="Range" 
                Style="{StaticResource LabelStyle}"/>

            <Label Grid.Column="1" Grid.Row="0"
                Text="{Binding Data.Range}" 
                x:Name="RangeValue"
                Style="{StaticResource StepperValueLabel}"/>

            <Label Grid.Column="0" Grid.Row="1"
                Text="Value"
                Style="{StaticResource LabelStyle}"/>

            <Label Grid.Column="1" Grid.Row="1"
                Text="{Binding Data.Value}" 
                x:Name="ValueValue"
                Style="{StaticResource StepperValueLabel}"/>

            <Label Grid.Column="0" Grid.Row="2"
                Text="Damage" 
                Style="{StaticResource LabelStyle}"/>

            <Label Grid.Column="1" Grid.Row="2"
                Text="{Binding Data.Damage}" 
                x:Name="DamageValue"
                Style="{StaticResource StepperValueLabel}"/>

        </Grid>

    </StackLayout>

</ContentPage>