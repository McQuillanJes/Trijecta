<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.ItemReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>


        <Grid>
            
            <StackLayout 
                Style="{StaticResource VerticalStack}"
                HorizontalOptions="Center"
                WidthRequest="250"
                Spacing="10">
              
                <Label Text="Detail Page" Style="{StaticResource HeaderStyle}"/>

                <StackLayout>
                    <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"
                           HorizontalOptions="Center"
                           BackgroundColor="DarkGray"
                           />
                    
                </StackLayout>

                <StackLayout BackgroundColor="Gray">

                    <StackLayout Style="{StaticResource HorizontalStack}"
                                 HeightRequest="35"
                                 Spacing="5"
                                 >
                        
                        <Label 
                            Text="Name :" 
                            Style="{StaticResource LabelStyle}"
                            />
                        <Label 
                            BackgroundColor="DimGray"
                            Text="{Binding Data.Name}" 
                            Style="{StaticResource ValueStyle}"
                            />
                        
                    </StackLayout>

                    <StackLayout Style="{StaticResource HorizontalStack}"
                                 HeightRequest="35"
                                 Spacing="5"
                                 >
                        
                        <Label 
                            Text="Description : " 
                            Style="{StaticResource LabelStyle}"
                        />
                        
                        <Label 
                            BackgroundColor="DimGray"
                            Text="{Binding Data.Description}" 
                            Style="{StaticResource ValueStyle}"
                        />
                        
                    </StackLayout>
                
                </StackLayout>

            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="Center"
                         BackgroundColor="Gray"
                         HeightRequest="75"
                         >

                <StackLayout WidthRequest="127">
                    
                    <StackLayout BackgroundColor="DimGray" 
                                 Style="{StaticResource VerticalStack}" 
                                 VerticalOptions="CenterAndExpand" 
                                 HorizontalOptions="Center" 
                                 HeightRequest="65"
                                 WidthRequest="100"
                                 >

                        <Label 
                            Text="Location : " 
                            HorizontalOptions="Center"
                            HeightRequest="37"
                            Style="{StaticResource LabelStyle}"
                        />
                        
                        <Label 
                            Text="{Binding Data.Location}" 
                            HorizontalOptions="Center"
                            FontAttributes="Bold"
                            Style="{StaticResource ValueStyle}"
                        />
                        
                    </StackLayout>
                    
                </StackLayout>


                <StackLayout WidthRequest="127">
                    
                    <StackLayout BackgroundColor="DimGray" 
                                 Style="{StaticResource VerticalStack}" 
                                 VerticalOptions="CenterAndExpand" 
                                 HorizontalOptions="Center" 
                                 HeightRequest="65"
                                 WidthRequest="100"
                                 >
                        
                    <Label 
                        Text="Attribute : " 
                        HorizontalOptions="Center"
                        HeightRequest="37"
                        Style="{StaticResource LabelStyle}"
                        />
                        
                    <Label 
                        Text="{Binding Data.Attribute}" 
                        HorizontalOptions="Center"
                        FontAttributes="Bold"
                        Style="{StaticResource ValueStyle}"
                        />
                        
                    </StackLayout>
                    
                </StackLayout>

            </StackLayout>

                <StackLayout Style="{StaticResource HorizontalStack}" 
                             Spacing="50"
                             HorizontalOptions="CenterAndExpand"
                             >


                    <Label 
                        Text="Range"
                        HeightRequest="43"
                        Style="{StaticResource LabelStyle}"
                        />


                    <StackLayout WidthRequest="51">

                        <Label 
                                
                                WidthRequest="45"
                                HeightRequest="45"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                BackgroundColor="RosyBrown"
                                FontAttributes ="Bold"
                                Text="{Binding Data.Range}" 
                                Style="{StaticResource ValueStyle}"
                                />

                    </StackLayout>

                </StackLayout>

                <StackLayout Style="{StaticResource HorizontalStack}"
                         HorizontalOptions="CenterAndExpand"
                         Spacing="50"
                         >
                
                    <Label 
                        Text="Value" 
                        HeightRequest="43"
                        Style="{StaticResource LabelStyle}"
                        />

                    <StackLayout>  
                        
                        <Label 
                        
                            WidthRequest="45"
                            HeightRequest="45"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            BackgroundColor="RosyBrown"
                            FontAttributes ="Bold"
                            Text="{Binding Data.Value}" 
                            Style="{StaticResource ValueStyle}"
                            />
                        
                    </StackLayout>
                
                </StackLayout>

                <StackLayout Style="{StaticResource HorizontalStack}"
                                 HorizontalOptions="Center"
                                 Spacing="50"
                                 >

                    <Label 
                            Text="Damage" 
                            HeightRequest="43"
                            Style="{StaticResource LabelStyle}"
                            />

                    <StackLayout WidthRequest="57">

                        <Label 
                                WidthRequest="45"
                                HeightRequest="45"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                BackgroundColor="RosyBrown"
                                FontAttributes="Bold"
                                Text="{Binding Data.Damage}" 
                                Style="{StaticResource ValueStyle}"
                                />

                    </StackLayout>

                </StackLayout>

            </StackLayout>
            
        </Grid>
    
</ContentPage>