<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.ItemReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>


    <Grid>
            
        <StackLayout 
            Style="{StaticResource VerticalStack}"
            HorizontalOptions="Center"
            WidthRequest="350"
            Spacing="10">
              
            <Label Text="Details Page" Style="{StaticResource HeaderStyle}"
                    FontSize="Medium"
                    HorizontalOptions="Center"/>

            <StackLayout>
                <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"
                        HorizontalOptions="Center"
                        BackgroundColor="Transparent"
                        WidthRequest="150"
                        HeightRequest="150"/>
                    
            </StackLayout>

            <StackLayout BackgroundColor="#696969">

                <StackLayout Style="{StaticResource HorizontalStack}"
                                    Padding="7,5"
                                    Spacing="5">

                    <Label 
                                    Text=" Name: " 
                                    FontSize="15"
                                    Style="{StaticResource LabelStyle}"/>

                    <Editor Text="{Binding Data.Name}" 
                                d:Text="Item Name"
                                FontSize="15"
                                WidthRequest="284"
                                AutoSize="TextChanges"
                                MaxLength="25"
                                BackgroundColor="#36454F"
                                IsReadOnly="True"/>

                </StackLayout>

                <StackLayout Style="{StaticResource HorizontalStack}"
                                    Padding="7,5"
                                    Spacing="5">

                    <Label 
                                    Text=" Description: "
                                    FontSize="15"
                                    Style="{StaticResource LabelStyle}"/>

                    <Editor Text="{Binding Data.Description}" 
                                d:Text="Item Description"
                                FontSize="15"
                                WidthRequest="247"
                                AutoSize="TextChanges"
                                MaxLength="50"
                                BackgroundColor="#36454F"
                                IsReadOnly="True"/>


                </StackLayout>

            </StackLayout>

            <StackLayout Style ="{StaticResource HorizontalStack}" 
                        BackgroundColor="#696969"
                        Padding="7,5"
                        WidthRequest="350"
                        Spacing="7">

                <StackLayout Padding="5">

                    <StackLayout BackgroundColor="#808080" 
                                    Style="{StaticResource VerticalStack}" 
                                    VerticalOptions="CenterAndExpand" 
                                    HorizontalOptions="Center" 
                                    HeightRequest="70"
                                    WidthRequest="156">

                        <Label 
                            Text="Location : " 
                            HorizontalOptions="Center"
                            HeightRequest="37"
                            Style="{StaticResource LabelStyle}"/>
                        
                        <Label 
                            Text="{Binding Data.Location}" 
                            HorizontalOptions="Center"
                            FontAttributes="Bold"
                            Style="{StaticResource ValueStyle}"/>
                        
                    </StackLayout>
                    
                </StackLayout>


                <StackLayout Padding="5">

                    <StackLayout BackgroundColor="#808080" 
                                    Style="{StaticResource VerticalStack}" 
                                    HorizontalOptions="Center" 
                                    HeightRequest="70"
                                    WidthRequest="156">
                        
                    <Label 
                        Text="Attribute : " 
                        HorizontalOptions="Center"
                        HeightRequest="37"
                        Style="{StaticResource LabelStyle}"/>
                        
                    <Label 
                        Text="{Binding Data.Attribute}" 
                        HorizontalOptions="Center"
                        FontAttributes="Bold"
                        Style="{StaticResource ValueStyle}"/>
                        
                    </StackLayout>
                    
                </StackLayout>

            </StackLayout>

            <StackLayout Orientation ="Horizontal"
                            HorizontalOptions="CenterAndExpand">


                <Label 
                    Text="Range"
                    FontSize="20"
                    HeightRequest="43"
                    WidthRequest="104"
                    Style="{StaticResource LabelStyle}"/>

                <Label       
                    WidthRequest="45"
                    HeightRequest="45"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    BackgroundColor="RosyBrown"
                    FontAttributes ="Bold"
                    Text="{Binding Data.Range}" 
                    Style="{StaticResource ValueStyle}"/>

            </StackLayout>

            <StackLayout HorizontalOptions="CenterAndExpand"
                            Orientation="Horizontal">

                <Label 
                    Text="Value" 
                    FontSize="20"
                    HeightRequest="43"
                    WidthRequest="104"
                    Style="{StaticResource LabelStyle}"/>

                <Label 
                    WidthRequest="45"
                    HeightRequest="45"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    BackgroundColor="RosyBrown"
                    FontAttributes ="Bold"
                    Text="{Binding Data.Value}" 
                    Style="{StaticResource ValueStyle}"/>

            </StackLayout>

            <StackLayout HorizontalOptions="CenterAndExpand"
                            Orientation="Horizontal">
                <Label 
                    Text="Damage" 
                    FontSize="20"
                    HeightRequest="43"
                    WidthRequest="102"
                    Style="{StaticResource LabelStyle}"/>

                <Label 
                    WidthRequest="45"
                    HeightRequest="45"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    BackgroundColor="RosyBrown"
                    FontAttributes="Bold"
                    Text="{Binding Data.Damage}" 
                    Style="{StaticResource ValueStyle}"/>
                    
            </StackLayout>

        </StackLayout>
            
    </Grid>
    
</ContentPage>