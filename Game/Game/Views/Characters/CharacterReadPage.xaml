<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.CharacterReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>

    <AbsoluteLayout
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        >

        <StackLayout Style="{StaticResource VerticalStack}"
                     HorizontalOptions="CenterAndExpand"
                     WidthRequest="500"
                     AbsoluteLayout.LayoutBounds="1,1,1,1" 
                     AbsoluteLayout.LayoutFlags="All">

            <ScrollView x:Name="ScrollView">
                <StackLayout Style="{StaticResource VerticalStack}">
                    
                    <Label Text="Read Page" Style="{StaticResource HeaderStyle}"
                               HorizontalOptions="Center"/>
                    
                    <Frame HeightRequest="210"
                           WidthRequest="380"
                           BorderColor="Black">
                        
                        <StackLayout Style="{StaticResource HorizontalStack}"
                                     WidthRequest="350"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Spacing="10">

                            <StackLayout Style="{StaticResource VerticalStack}"
                                         Spacing="20"
                                         WidthRequest="125">

                                <Label Text="Name" Style="{StaticResource HeaderStyle}"
                                           HorizontalOptions="Center"
                                           FontSize="Medium"
                                           FontAttributes="Bold"/>

                                <Frame BackgroundColor="#36454F"
                                       BorderColor="Black"
                                       WidthRequest="125"
                                       HeightRequest="125">
                                    <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"/>
                                </Frame>

                            </StackLayout>

                            <StackLayout Style="{StaticResource VerticalStack}"
                                         VerticalOptions="Center"
                                         WidthRequest="215">
                                <StackLayout Style="{StaticResource VerticalStack}"
                                             VerticalOptions="Center"
                                             HeightRequest="40"
                                             WidthRequest="215">
                                    <Label Text="┌( ͝° ͜ʖ͡°)=ε/̵͇̿̿/'̿'̿ ̿  (|°| ͜ʖ |°|)︻╦╤─"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Start"/>
                                </StackLayout>
                                <StackLayout Style="{StaticResource HorizontalStack}"
                                         HorizontalOptions="Start">

                                    <Label 
                                        Text="Class/Rank : " 
                                        Style="{StaticResource LabelStyle}"/>
                                    <Frame BackgroundColor="#36454F"
                                           WidthRequest="128"
                                           Padding="3">
                                        <Label 
                                            Text="{Binding Data.Name}" 
                                            Style="{StaticResource ValueStyle}"/>
                                    </Frame>
                                    
                                </StackLayout>

                                <StackLayout Style="{StaticResource HorizontalStack}"
                                             HorizontalOptions="Start">
                                    <Label 
                                    Text="CodeName: : " 
                                    Style="{StaticResource LabelStyle}"/>
                                    <Frame BackgroundColor="#36454F"
                                           WidthRequest="125"
                                           Padding="3">
                                        <Label 
                                            Text="{Binding Data.Level}" 
                                            Style="{StaticResource ValueStyle}"/>
                                    </Frame>
                                </StackLayout>

                                <StackLayout Style="{StaticResource HorizontalStack}"
                                         HorizontalOptions="Start">
                                    <Label 
                                    Text="Description : " 
                                    Style="{StaticResource LabelStyle}"/>
                                    <Frame BackgroundColor="#36454F"
                                           WidthRequest="125"
                                           Padding="3">
                                        <Label 
                                            Text="{Binding Data.Description  }" 
                                            Style="{StaticResource ValueStyle}"/>
                                    </Frame>
                                </StackLayout>

                                <StackLayout Style="{StaticResource HorizontalStack}"
                                             HorizontalOptions="End">

                                    <Label Text="█║█ ║▌║█║▌│║▌║▌█║"
                                           TextColor="Black"
                                           VerticalOptions="Center"

                                           ScaleY="2"
                                           ScaleX="1"/>
                                    
                                    <StackLayout Style="{StaticResource HorizontalStack}"
                                             HorizontalOptions="End">
                                        <Label 
                                        Text="Level : " 
                                        Style="{StaticResource LabelStyle}"/>
                                        <Frame BackgroundColor="#36454F"
                                               WidthRequest="25"
                                               Padding="3">
                                            <Label 
                                                Text="{Binding Data.Level  }" 
                                                HorizontalOptions="Center"
                                                Style="{StaticResource ValueStyle}"/>
                                        </Frame>
                                    </StackLayout>
                                </StackLayout>
                        </StackLayout>
                        
                        </StackLayout>
                        
                    </Frame>
                    
                <FlexLayout 
                        Margin="5"
                        Wrap="Wrap"
                        JustifyContent="SpaceAround"
                        AlignContent="SpaceAround"
                        x:Name="ItemBox">
                    </FlexLayout>

                </StackLayout>
            </ScrollView>
        </StackLayout>

        <!--The Item Popup-->
        <StackLayout x:Name="PopupLoadingView" 
                 BackgroundColor="{StaticResource PageBackgroundColor}" 
                 IsVisible="false" 
                 AbsoluteLayout.LayoutBounds=".5, .5,.5,.5" 
                 AbsoluteLayout.LayoutFlags="All">

            <StackLayout 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                WidthRequest="300"
                HeightRequest="300"
                >

                <Frame 
                    BorderColor="{StaticResource TriciaryTextColor}" Padding="1">
                    <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="CenterAndExpand" Padding="2">
                        <Image x:Name="PopupItemImage" Style="{StaticResource ImageLargeStyle}"/>

                        <Label x:Name="PopupItemName" Style="{StaticResource PopupItemTextStyle} " MaxLines="2" LineBreakMode="WordWrap" />
                        <Label x:Name="PopupItemDescription" Style="{StaticResource PopupItemTextStyle}" MaxLines="2" LineBreakMode="WordWrap" />

                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label Text="Location : " Style="{StaticResource LabelStyle}" />
                            <Label x:Name="PopupItemLocation" Style="{StaticResource ValueStyle}" />
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Label x:Name="PopupItemAttribute" Style="{StaticResource LabelStyle}" />
                            <Label x:Name="PopupItemValue" Style="{StaticResource ValueStyle}" />
                        </StackLayout>

                        <Button x:Name="PopupCloseButton" 
                                Clicked="ClosePopup_Clicked" 
                                Text="Close"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>