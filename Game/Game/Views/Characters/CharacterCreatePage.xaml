<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="using:Game.Models"
             xmlns:local_helpers="clr-namespace:Game.Helpers"
             xmlns:local_enum="clr-namespace:Game.Models"
             x:Class="Game.Views.CharacterCreatePage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" IconImageSource="icon_cancel.png"/>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" IconImageSource="icon_save.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <local_helpers:StringEnumConverter x:Key="StringEnum"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">

            <StackLayout Style="{StaticResource VerticalStack}"
                         HorizontalOptions="CenterAndExpand"
                         WidthRequest="475"
                         AbsoluteLayout.LayoutBounds="1,1,1,1" 
                         AbsoluteLayout.LayoutFlags="All">

                <ScrollView x:Name="ScrollView">


                    <StackLayout Style="{StaticResource VerticalStack}"
                                 Spacing="5">

                        <Label Text="Create Page" Style="{StaticResource HeaderStyle}"
                               HorizontalOptions="Center"/>

                        <Frame HeightRequest="240"
                               WidthRequest="400"
                               BorderColor="Black"
                               Margin="0,0,0,0">

                            <StackLayout Style="{StaticResource VerticalStack}"
                                         WidthRequest="375"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Spacing="5"
                                         Margin="5,5,5,5">

                                <StackLayout Style="{StaticResource HorizontalStack}"
                                             HorizontalOptions="CenterAndExpand"
                                             Spacing="25">

                                    <StackLayout Style="{StaticResource HorizontalStack}"
                                                 VerticalOptions="CenterAndExpand">
                                        
                                        <Label Text="Name" Style="{StaticResource HeaderStyle}"
                                                HorizontalOptions="Center"
                                                FontSize="Small"
                                                FontAttributes="Bold"/>

                                        <Entry  Text="{Binding Data.Name, Mode=TwoWay}" 
                                                Style="{StaticResource EntryStyle}"
                                                WidthRequest="100"/>

                                    </StackLayout>
                                    
                                    <Label Text="┌( ͝° ͜ʖ͡°)=ε/̵͇̿̿/'̿'̿ ̿  (|°| ͜ʖ |°|)︻╦╤─"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Start"/>

                                </StackLayout>

                                <StackLayout Style="{StaticResource HorizontalStack}"
                                             Spacing="5"
                                             WidthRequest="350"
                                             VerticalOptions="Center">


                                    <StackLayout    Style="{StaticResource VerticalStack}"
                                                    VerticalOptions="CenterAndExpand"
                                                    Spacing="10">

                                        <Frame BackgroundColor="#36454F"
                                               BorderColor="Black"
                                               WidthRequest="125"
                                               HeightRequest="125"
                                               VerticalOptions="Center">

                                            <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"/>

                                        </Frame>
                                    
                                        <ImageButton    x:Name="RollDice"
                                                        Style="{StaticResource ImageSmallStyle}"
                                                        Source="d10_50x50.png"
                                                        Clicked="RollDice_Clicked"/>

                                    </StackLayout>


                                    <StackLayout Style="{StaticResource VerticalStack}"
                                                 VerticalOptions="Center"
                                                 WidthRequest="250"
                                                 Spacing="5">

                                        <StackLayout Style="{StaticResource HorizontalStack}"
                                                     HorizontalOptions="Start"
                                                     Spacing="3">

                                            <Label  Text="Class/Rank:" 
                                                    Style="{StaticResource LabelStyle}"/>

                                            <Frame BackgroundColor="#36454F"
                                                   WidthRequest="142"
                                                   Padding="3">

                                                <Picker x:Name="ClassPicker"/>

                                            </Frame>

                                        </StackLayout>

                                        <StackLayout Style="{StaticResource HorizontalStack}"
                                                     HorizontalOptions="Start"
                                                     Spacing="3">
                                        
                                            <Label  Text="CodeName:" 
                                                    Style="{StaticResource LabelStyle}"/>
                                            
                                            <Frame BackgroundColor="#36454F"
                                                   WidthRequest="143"
                                                   Padding="3">
                                                
                                                <Entry  Style="{StaticResource EntryStyle}"/>
                                            
                                            </Frame>
                                        
                                        </StackLayout>

                                        <StackLayout    Style="{StaticResource HorizontalStack}"
                                                        HorizontalOptions="Start"
                                                        Spacing="3">

                                            <Label  Text="Description: " 
                                                    Style="{StaticResource LabelStyle}"/>

                                            <Frame  BackgroundColor="#36454F"
                                                    WidthRequest="140"
                                                    Padding="3">

                                                <Entry  Text="{Binding Data.Description, Mode=TwoWay}" 
                                                        Style="{StaticResource EntryStyle}"/>

                                            </Frame>

                                        </StackLayout>

                                        <StackLayout Style="{StaticResource HorizontalStack}"
                                                     HorizontalOptions="CenterAndExpand"
                                                     Spacing="5">

                                            <Label Text="║█║▌║█║▌│║▌█║"
                                                   TextColor="Black"
                                                   VerticalOptions="Center"
                                                   ScaleY="1.75"
                                                   ScaleX="1"/>

                                            <StackLayout    Style="{StaticResource HorizontalStack}"
                                                            HorizontalOptions="End">
                                                
                                                <Label  Text="Level: " 
                                                        Style="{StaticResource LabelStyle}"/>
                                            
                                                <Frame BackgroundColor="#36454F"
                                                       Padding="3">

                                                    <Picker SelectedItem="{Binding SelectedItemProperty}" 
                                                            SelectedIndexChanged="Level_Changed"
                                                            x:Name="LevelPicker"
                                                            MinimumWidthRequest="20"/>


                                                </Frame>
                                            
                                            </StackLayout>

                                        </StackLayout>


                                    </StackLayout>

                                </StackLayout>

                            </StackLayout>

                        </Frame>

                        <StackLayout Style="{StaticResource HorizontalStack}"
                                     HorizontalOptions="CenterAndExpand">

                            <Label  Text="Max Health" 
                                    Style="{StaticResource LabelStyle}"/>

                            <Slider x:Name="HealthSlider" 
                                    WidthRequest="250" 
                                    HeightRequest="36"   
                                    ThumbColor="Transparent"
                                    MinimumTrackColor="#36454F"
                                    MaximumTrackColor="DimGray"
                                    Maximum="100" 
                                    Minimum="0"
                                    Value="{Binding Data.GetMaxHealthTotal}"
                                    InputTransparent="True"/>

                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}"
                                     HorizontalOptions="CenterAndExpand">

                            <Label Text="Attack"
                                   Style="{StaticResource LabelStyle}"/>

                            <Slider x:Name="AttackSlider" 
                                    WidthRequest="250" 
                                    HeightRequest="36"  
                                    ThumbColor="Black"
                                    MinimumTrackColor="#36454F"
                                    MaximumTrackColor="DimGray"
                                    Maximum="10" 
                                    Minimum="0"
                                    Value="{Binding Data.Attack, Mode=TwoWay}"
                                    ValueChanged="Attack_OnSliderValueChanged"/>

                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}"
                                     HorizontalOptions="CenterAndExpand">
                            
                            <Label  Text="Defense"
                                Style="{StaticResource LabelStyle}"/>

                            <Slider x:Name="DefenseSlider" 
                                WidthRequest="250" 
                                HeightRequest="36"  
                                ThumbColor="Black"
                                MinimumTrackColor="#36454F"
                                MaximumTrackColor="DimGray"
                                Maximum="10" 
                                Minimum="0"
                                Value="{Binding Data.GetDefenseTotal}"
                                ValueChanged="Defense_OnSliderValueChanged"/>

                            <Frame BackgroundColor="#36454F"
                                           WidthRequest="50"
                                           HeightRequest="30">

                                <Label Text="{Binding Data.GetDefenseTotal}"
                                               x:Name="DefenseLabel"
                                               Style="{StaticResource LabelStyle}"
                                               HorizontalOptions="Center"/>

                            </Frame>
                            
                        </StackLayout>

                        <StackLayout Style="{StaticResource HorizontalStack}"
                                     HorizontalOptions="CenterAndExpand">

                            <Label Text="Speed"
                                   Style="{StaticResource LabelStyle}"/>

                            <Slider x:Name="SpeedSlider" 
                                    WidthRequest="250" 
                                    HeightRequest="36"  
                                    ThumbColor="Black"
                                    MinimumTrackColor="#36454F"
                                    MaximumTrackColor="DimGray"
                                    Maximum="10" 
                                    Minimum="0"
                                    Value="{Binding Data.GetSpeedTotal}"
                                    ValueChanged="Speed_OnSliderValueChanged"/>

                            <Frame BackgroundColor="#36454F"
                                           WidthRequest="50"
                                           HeightRequest="30">

                                <Label Text="{Binding Data.GetSpeedTotal}"
                                               x:Name="SpeedLabel"
                                               Style="{StaticResource LabelStyle}"
                                               HorizontalOptions="Center"/>

                            </Frame>

                        </StackLayout>




                        <StackLayout Style="{StaticResource OuterBoxStack}" 
                                     Spacing="10">

                            

                            <StackLayout Style="{StaticResource VerticalStack}" 
                                         HorizontalOptions="FillAndExpand">

                                <Label Text="Attack" 
                                       Style="{StaticResource LabelStyle}"/>

                                <StackLayout Style="{StaticResource HorizontalStack}" 
                                             Padding="10,0,10,0">

                                    <Label  Text="{Binding Data.Attack, Mode=TwoWay}" 
                                            x:Name="AttackValue"
                                            Style="{StaticResource ValueStyle}"
                                            Padding="0,0,10,0"
                                            HorizontalOptions="End"
                                            HorizontalTextAlignment="End"/>


                                </StackLayout>

                                <Label Text="Defense" 
                                       Style="{StaticResource LabelStyle}"/>

                                <StackLayout Style="{StaticResource HorizontalStack}" 
                                             Padding="10,0,10,0">

                                    <Label  Text="{Binding Data.Defense, Mode=TwoWay}" 
                                            x:Name="DefenseValue"
                                            Style="{StaticResource ValueStyle}"
                                            Padding="0,0,10,0"
                                            HorizontalOptions="End"
                                            HorizontalTextAlignment="End"/>


                                </StackLayout>

                                <Label Text="Speed" 
                                       Style="{StaticResource LabelStyle}"/>
                            
                                <StackLayout Style="{StaticResource HorizontalStack}" 
                                             Padding="10,0,10,0">

                                    <Label  Text="{Binding Data.Speed, Mode=TwoWay}" 
                                            x:Name="SpeedValue"
                                            Style="{StaticResource ValueStyle}"
                                            Padding="0,0,10,0"
                                            HorizontalOptions="End"
                                            HorizontalTextAlignment="End"/>

                                </StackLayout>
                            </StackLayout>

                            <FlexLayout Padding="5"
                                        Wrap="Wrap"
                                        JustifyContent="SpaceAround"
                                        AlignContent="SpaceAround"
                                        x:Name="ItemBox">
                            
                            </FlexLayout>

                        </StackLayout>

                    </StackLayout>

                </ScrollView>
                
            </StackLayout>

            <!--The Item Popup-->
            <StackLayout x:Name="PopupItemSelector" 
                         BackgroundColor="{StaticResource PageBackgroundColor}" 
                         IsVisible="false" 
                         AbsoluteLayout.LayoutBounds=".5, .5,.5,.5" 
                         AbsoluteLayout.LayoutFlags="All">

                <StackLayout    VerticalOptions="CenterAndExpand" 
                                HorizontalOptions="CenterAndExpand"
                                WidthRequest="300"
                                HeightRequest="300">

                    <Frame  BorderColor="{StaticResource TriciaryTextColor}" 
                            Padding="1">
                        
                        <StackLayout Style="{StaticResource VerticalStack}" 
                                     HorizontalOptions="CenterAndExpand" 
                                     Padding="2">
                            
                            <Label x:Name="PopupLocationLabel" 
                                   Style="{StaticResource PopupItemTextStyle}" />
                            
                            <Label x:Name="PopupLocationValue" 
                                   Style="{StaticResource PopupItemTextStyle}" />

                            <ListView   x:Name="PopupLocationItemListView" 
                                        CachingStrategy="RecycleElement"
                                        ItemSelected="OnPopupItemSelected"
                                        HasUnevenRows="true"
                                        Margin="5,0,5,0"
                                        RowHeight="80">

                                <ListView.ItemTemplate>

                                    <DataTemplate>

                                        <ViewCell>
                                            
                                            <Grid ColumnSpacing="5" 
                                                  RowSpacing="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="auto"/>
                                                </Grid.RowDefinitions>

                                                <Image  Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                                                        Source="{Binding ImageURI}"
                                                        Style="{StaticResource ImageSmallStyle}"
                                                        VerticalOptions="CenterAndExpand"/>

                                                <Label  Grid.Column="1" Grid.Row="0"
                                                        Text="{Binding Name}" 
                                                        Style="{StaticResource ListStyle}"/>

                                                <StackLayout Grid.Column="1" Grid.Row="1" 
                                                             Orientation="Horizontal">
                                                    
                                                    <Label Text="{Binding Attribute}" 
                                                           Style="{StaticResource ListStyle}"/>
                                                    
                                                    <Label Text="{Binding Value}" 
                                                           Style="{StaticResource ListStyle}"/>
                                                    
                                                </StackLayout>

                                                <Label Grid.Column="1" Grid.Row="2"
                                                    Text="{Binding Description}" 
                                                    Style="{StaticResource ListStyle}"
                                                    FontSize="Micro"/>
                                                
                                            </Grid>
                                            
                                        </ViewCell>
                                        
                                    </DataTemplate>
                                    
                                </ListView.ItemTemplate>
                                
                            </ListView>

                            <Button x:Name="PopupCloseButton" 
                                    Clicked="ClosePopup_Clicked" 
                                    Text="Close"/>
                            
                        </StackLayout>
                        
                    </Frame>
                    
                </StackLayout>
                
            </StackLayout>
            
        </AbsoluteLayout>

    </ContentPage.Content>
    
</ContentPage>